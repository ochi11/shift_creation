<!-- 確定シフト一覧画面 -->
 <div class="row" style="width:60%; margin:0 auto;">
<h4>確定シフト一覧</h4>
  <%= form_with model: @shift, url:admin_shifts_path do |f| %>
    <table class="table table-bordered">
    	<tr>
    		<th>希望者</th>
    		<th>希望日時</th>
    		<th>労働開始時間</th>
    		<th>労働終了時間</th>
    		<th>休憩開始時間</th>
    		<th>休憩終了時間</th>
    	</tr>
  
      <% @shifts.each do |shift| %>
    	<tr>
    		<td><%= shift.hope_shift.end_user.name %></td>
          <td><%= shift.date %> <%= f.hidden_field :date, :value => @hope_shift_date %></td>
          <td><%= shift.working_time_start %> <%= f.hidden_field :working_time_start, :value => @shift_working_time_start %></td>
          <td><%= shift.working_time_end %> <%= f.hidden_field :working_time_end, :value => @shift_working_time_end %></td>
          <%# if hope_shift.shifts.first.present? then %>
            <td><%= shift.break_time_start %> <%= f.hidden_field :break_time_start, :value => @shift_break_time_start %></td>
            <td><%= shift.break_time_end %> <%= f.hidden_field :break_time_end, :value => @shift_break_time_end %></td>
          <%# else %>
          <%# end %>
          <td>
            <%#= f.submit '登録', class:"btn btn-info btn-md" %>
            <%#= link_to "本登録", admin_shifts_path(@shift.id), methed: :post %>


          </td>
          <td><%= link_to "編集", edit_admin_shift_path(shift.id ) %></td>
          <td><%= link_to "削除する", admin_shift_path(shift.id), method: :delete %></td>
    	 </tr>
      <% end %>
    </table>
  <% end %>
</div>

<div id="calendar"></div> <!-- カレンダーを特定のページに読み込ませる -->