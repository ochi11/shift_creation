<div class="edit_container" style="width: 50%; margin: 20px auto;">

<%= form_with model: @end_user, url:admin_end_user_path, method: :patch do |f| %>
<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;"><%= @end_user.name %>さんの会員情報編集</h4>
  <label>従業員ID</label>
    <%= @end_user.id %>
<div class="form-group">
    <label>氏名</label>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
</div>

  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
      <!-- 就業中なら有効、退職した方は退会。 -->
    <label class="col-sm-2 control-label">就業ステータス</label>
    <%= f.select :is_deleted,{就業中:false, 退職:true} %>
  </div>

  <div class="actions">
    <label class="col-sm-2 control-label"></label>
    <%= f.submit "変更を保存", class:"btn btn-primary btn-md" %>
  </div>

<% end %>

</div>